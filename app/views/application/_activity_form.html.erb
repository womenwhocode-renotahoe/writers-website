<%= form_for [@writer, @activity] do |f| %>

  <%= f.fields_for :goal do | wg | %> 
    <%= wg.label :goal %>
    <%= wg.collection_select(:goal_id, @writer.goals, :id, :verb) %>
  <% end %>
  <br>
  <%= f.label :count %>
  <%= f.number_field :count %>

  <%= f.label :date %>
  <%= f.date_select :date %>
  <br>

  <%= f.submit %>
<% end %>
