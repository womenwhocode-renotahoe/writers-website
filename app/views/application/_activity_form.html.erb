<%= form_for [@writer, @activity] do |f| %>
  <%= f.label :date %>
  <%= f.date_select :date %>
  <br>
  <%= f.fields_for :writer_goal do | wg | %> 
    <%= wg.label :goal %>
    <%= wg.collection_select(:goal_id, Goal.all, :id, :activity_type) %><br />
  <% end %>
  <br>
  <%= f.label :value %>
  <%= f.text_field :value %>
  <br>
  <%= f.submit %>
<% end %>
