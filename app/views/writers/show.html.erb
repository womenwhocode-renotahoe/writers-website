<%= render partial: "admin_nav" if (user_signed_in? && current_user.is_admin?) %>
<h1><%= @writer.full_name %>'s Website</h1>
<%= image_tag @writer.user.avatar.url %>
<h3>Twitter Handle: <%= @writer.twitter %></h3>
<h3>Location: <%= @writer.location %></h3>

<h3>About Me</h3>
<p><%= @writer.bio %></p>

<h2>Stories<h2>
<% @stories.each do |story| %>
  <h3><%= link_to story.title, writer_story_path(@writer, story) %></h3>
  <p><%= story.summary %></p>
<% end %>
