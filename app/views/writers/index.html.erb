<table>
  <thead>
    <th>Name</th>
    <th>Twitter Handle</th>
    <th>Location</th>
    <th>Visit Page</th>
    <th>Writers Wall</th>
  </thead>
  <tbody>
    <% @writers.each do |writer| %>
      <tr>
        <td><%= writer.full_name %></td>
        <td><%= writer.twitter %></td>
        <td><%= writer.location %></td>
        <td><%= link_to 'Profile', writer_path(writer) %></td>
        <td><%= link_to 'Wall', wall_path(writer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>