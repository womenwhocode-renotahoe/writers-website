<h1><%= @story.title %></h1>

<h2>Summary</h3>
<p><%= @story.summary %></p>

<h3>Body</h3>
<p><%= @story.body %></p>
<p>Last updated: <%=@story.updated_at.strftime("%Y-%m-%d") %> </p>

<% if current_owner_writer? %>
	<%= link_to 'Edit', edit_writer_story_path(@writer, @story) %> |
	<%= link_to 'Delete', writer_story_path(@writer, @story), method: :delete %>
<% end %>